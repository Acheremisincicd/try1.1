    </constraint>
    <constraint>
        <url-pattern>/</url-pattern>
        <url-pattern>/WebShop/index.jsp</url-pattern>
        <url-pattern>/WebShop/login</url-pattern>
        <url-pattern>/WebShop/register</url-pattern>
        <url-pattern>/WebShop/gallery.html</url-pattern>
        <url-pattern>/WebShop/about.html</url-pattern>
