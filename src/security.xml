<security>
    <constraint>
        <url-pattern>/*</url-pattern>
        <role>admin</role>
    </constraint>
    <constraint>
        <url-pattern>/WebShop/product</url-pattern>
        <url-pattern>/WebShop/index.jsp</url-pattern>
        <url-pattern>/WebShop/logout</url-pattern>
        <url-pattern>/WebShop/cart</url-pattern>
